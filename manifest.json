{
    "name": "Discord Theatre",
    "description": "Use discord's chat in a tiny window",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "discord_theatre.html",
        "default_icon": "discord_theatre.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "<all_urls>"
    ],
    "commands": {
        "_execute_broswer_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens hello.html"
        }
    }
}